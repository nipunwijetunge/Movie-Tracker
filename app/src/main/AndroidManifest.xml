<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movietracker">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieTracker">
        <activity android:name=".ImdbRatings">

        </activity>
        <activity
            android:name=".MovieRatings"
            android:parentActivityName=".MovieRatings">
        </activity>
        <activity
            android:name=".SearchMovie"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity
            android:name=".EditMovieItemView"
            android:parentActivityName=".EditMovie"></activity>
        <activity
            android:name=".EditMovie"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".FavouriteMovies"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DisplayMovies"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RegisterMovie"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>