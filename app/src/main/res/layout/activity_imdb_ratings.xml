<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imdb_rating_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/imdb_rating_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/expletus_sans"
        android:text="IMDB ratings,"
        android:textSize="30sp"
        android:textStyle="italic" />

    <ScrollView
        android:id="@+id/imdb_rating_scrollView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@id/imdb_rating_header"
        android:fillViewport="true">

        <ListView
            android:id="@+id/imdb_rating_listView"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginTop="10dp" />
    </ScrollView>

</RelativeLayout>